<%= render "devise/shared/error_messages", resource: resource %>
<div class="container devise">
  <div class="devise_frame">
    <h2 class="mb-3">アカウント編集</h2>
    <div class="devise_inner">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="field">
        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'メールアドレスを入力してください' %>
        </div>
      </div>
      <div class="field">
        <div class="form-group">
          <%= f.label :変更後のパスワード（変更する場合のみ入力） %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        </div>
      </div>
      <div class="field">
        <div class="form-group">
          <%= f.label :パスワード確認用（変更する場合のみ入力）%>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>
      </div>
      <div class="field">
        <div class="form-group">
          <%= f.label :現在のパスワード %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control', placeholder: '現在のパスワードを入力' %>
        </div>
      </div>
      <div class="actions">
        <%= f.submit "更新", class: 'form-control btn-primary my-4' %>
      </div>
      <div class="actions">
        <%= link_to "戻る", account_path, class: 'btn btn-outline-secondary form-control' %>
      </div>
      <% end %>
      </div>
    </div>
  </div>
</div>


