<div class="container-fiuld user">
  <div class="rows">
    <div class="col-lg-2 user-nav user-nav-mobile d-lg-none">
      <ul>
        <li class="actives">
          <%= link_to 'アカウント', account_path %>
        </li>
        <li class="active">
          <%= link_to 'プロフィール', profile_edit_path %>
        </li>
      </ul>
    </div>
    <div class="col-md-10 user-view">
      <div class="user-view-box">
        <div class="update-content">
          <div class="row">
            <h5>プロフィール</h5>
          </div>
        </div>
        <% resource = User.new unless resource %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="update-content">
          <div class="row">
            <div class="col-md-6 offset-md-3">
              <div class="icon-box">
                <% if current_user.image.present?%>
                  <%= image_tag "user_images#{current_user.image.to_s}", class: 'icon-image host-icon'%>
                <% else %>
                  <%= image_tag "/user_images/default_icon-9263fc59c414b7228d256fc178dcb22183561357950a68f5ad086ba7ee054974.jpeg", class: 'icon-image host-icon'%>
                <%end%>
              </div>
            </div>
          </div>
        </div>
        <div class="update-content">
          <div class="row">
            <%= f.label :image, "アイコン画像", class: 'col-md-3 required-a' %>
            <%= f.file_field :image, class: 'md-4 col-md-9' %>
          </div>
        </div>
        <div class="update-content">
          <div class="row">
            <%= f.label :name, "名前", class: 'col-md-3 required-a' %>
            <%= f.text_field :name, autofocus: true, class: 'form-control md-4 col-md-9', placeholder: '名前を入力', value: current_user.name%>
          </div>
        </div>
        <div class="update-content">
          <div class="row">
            <%= f.label :name, "自己紹介", class: 'col-md-3 required-a' %>
            <%= f.text_area :introduction, autofocus: true, class: 'form-control md-4 col-md-9', placeholder: '自己紹介を入力', value: current_user.introduction%>
          </div>
        </div>
        <div class="update-content">
          <div class="row">
            <%= f.submit "更新", class: 'col-md-2 btn btn-primary' %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

